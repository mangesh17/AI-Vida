# Development Environment Variables
# Copy this file to .env and fill in the actual values

# GCP Configuration
PROJECT_ID=your-gcp-project-id
REGION=us-central1
ENVIRONMENT=dev

# Database Configuration (will be populated by Terraform)
DATABASE_URL=postgresql://username:password@host:5432/database
DATABASE_SSL_MODE=require

# Application Configuration
APP_NAME=aivida-discharge-copilot
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=DEBUG

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-32-chars
API_KEY_SALT=your-api-key-salt

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
VERTEX_AI_PROJECT=your-vertex-ai-project
VERTEX_AI_LOCATION=us-central1

# FHIR Configuration
FHIR_BASE_URL=https://your-fhir-server.com/fhir/R4
FHIR_CLIENT_ID=your-fhir-client-id
FHIR_CLIENT_SECRET=your-fhir-client-secret

# HL7 Configuration
HL7_LISTENER_PORT=2575
HL7_PROCESSING_QUEUE=hl7-processing

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# HIPAA Compliance
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years as required by HIPAA
PHI_ENCRYPTION_ENABLED=true
AUDIT_TRAIL_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,json,xml

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT_SECONDS=30
